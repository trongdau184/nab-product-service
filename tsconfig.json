{
    "compilerOptions": {
      "outDir": "build",
      "lib": [ "es5", "es6" ],
      "types": ["reflect-metadata", "jest"],
      "module": "commonjs",
      "target": "es6",
      "sourceMap": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": [
      "node_modules", "**/*.spec.ts", "**/*.test.ts", "**/__mocks__",
    ],
    "include": [
      "src/**/*.ts",
      "src/configurations/*.json"
    ]
  }